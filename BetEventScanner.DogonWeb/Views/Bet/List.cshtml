@model BetEventScanner.DogonWeb.Models.BetInfoListDto

@{
    ViewBag.Title = "List";
}

<h2>Bets list</h2>



@(Html.Kendo().Grid<BetEventScanner.DogonWeb.Models.BetInfoListDto>()
                .Name("grid")
                .Columns(columns =>
                {
                    columns.Bound(c => c.FirstPlayer).Width(150);
                    columns.Bound(c => c.SecondPlayer).Width(150);
                    columns.Bound(c => c.FavoritePlayer).Width(70).Title("FavPlayer");
                    columns.Bound(c => c.FLine).Width(50);
                    columns.Bound(c => c.FBet).Width(50);
                    columns.Bound(c => c.SLine).Width(50);
                    columns.Bound(c => c.SBet).Width(50);
                    columns.Bound(c => c.TLine).Width(50);
                    columns.Bound(c => c.TBet).Width(50);
                    columns.Bound(c => c.WinLine).Width(70);
                    columns.Command(command => { command.Edit(); command.Destroy(); }).Width(200);
                })
                .Scrollable()
                .Sortable()
                .HtmlAttributes(new { style = "height:450px;" })
                 .Pageable(pageable => pageable
                    .Refresh(true)
                    .PageSizes(true)
                    .ButtonCount(5))
                .DataSource(dataSource => dataSource
                    .Ajax()
                    .Read(read => read.Action("ReadBetList", "Bet"))
                    .Model(model =>
                    {
                        model.Id(p => p.Id);
                        model.Field(p => p.FirstPlayer).Editable(false);
                        model.Field(p => p.SecondPlayer).Editable(false);
                        model.Field(p => p.FavoritePlayer).Editable(false);
                        model.Field(p => p.FLine).Editable(false);
                        model.Field(p => p.SLine).Editable(false);
                        model.Field(p => p.TLine).Editable(false);
                        model.Field(p => p.FBet).Editable(false);
                        model.Field(p => p.SBet).Editable(false);
                        model.Field(p => p.TBet).Editable(false);

                        model.Field(p => p.WinLine).Editable(true);
                    })
                    .Update(update => update.Action("UpdateBet", "Bet"))
                    .Destroy("RemoveBet", "Bet")
                    .PageSize(20)
                )


)